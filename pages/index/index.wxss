/**index.wxss**/
.main {
  background-color: #E6E6E6;
  width: 100%;
  height: 100%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}
.input-history {
  font-size: 38rpx;
  color: gray;
  white-space: nowrap;
  text-align: right;
  display: inline-block;
  margin: 10rpx;
  top: 120rpx;
  right: 20rpx;
  height: 45rpx;
  width: auto;
}

.current {
  align-self: flex-end;
  margin: 80rpx 30rpx 10rpx 10rpx;
  font-size: 70rpx;
  font-weight: bold;
}

.button-board {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 10rpx;
}

.button-row {
  display: flex;
  flex-direction: row;
  flex: 1;
}

.button-cell {
  flex: 1;
  margin: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 1rpx 1rpx 1rpx #AAAAAA;
}

.button-cell-num {
  background-color: #FAFAFA;
}

.button-cell-fnc {
  background-color: #DDDDDD;
}

.button-cell:hover {
  background-color: #d6d6d6;
}